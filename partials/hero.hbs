<div class='c-hero'>
  <div class='o-grid c-hero__inner'>
    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m'>
      <div class='c-hero__content'>
        <div class='c-hero__description'>
          {{{ @site.description }}}
        </div>

        {{!-- {{> subscribe-list}} --}}

        {{#unless @member}}
          {{> hero-subscribe-actions}}
        {{/unless}}
      </div>
    </div>
    {{#if @site.cover_image}}
      <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m'>
        <img class='c-hero-image lazyload' data-src='{{ img_url @site.cover_image size='xl' }}' alt='{{ @site.title }}'>
      </div>
    {{/if}}
  </div>
</div>